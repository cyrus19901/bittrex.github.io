{
  "name": "bittrex-developers",
  "version": "0.1.0",
  "description": "Bittrex has released an initial version of its Websocket API.",
  "scripts": {
    "dev": "concurrently \"npm run serve\" \"npm run watch\"",
    "dev:v3": "concurrently \"npm run serve\" \"npm run watch build:spectacle:v3\"",
    "serve": "jekyll serve",
    "build": "npm run build:spectacle:v1 && npm run build:v3",
    "build:spectacle:v1": "node ./spectacle/bin/spectacle -e -t api/v1-1/assets _data/api-spec-v1-1.json",
    "build:v3": "npm run build:json:v3 && npm run build:spectacle:v3",
    "build:json:v3": "npm run gulp -- build-v3-spec",
    "build:spectacle:v3": "node ./spectacle/bin/spectacle -e -t api/v3/assets _data/api-spec-v3.json",
    "clean:json:v3": "rm ./_data/api-spec-v3.json",
    "watch": "npm-watch",
    "gulp": "./node_modules/.bin/gulp"
  },
  "watch": {
    "build:spectacle:v1": {
      "patterns": [
        "_data",
        "spectacle"
      ],
      "extensions": "js,json,hbs,scss",
      "quiet": false
    },
    "build:spectacle:v3": {
      "patterns": [
        "_data",
        "spectacle"
      ],
      "extensions": "js,json,hbs,scss",
      "quiet": false
    }
  },
  "devDependencies": {
    "bluebird": "^3.4.7",
    "cheerio": "^0.19.0",
    "clarify": "^1.0.5",
    "commander": "*",
    "concurrently": "^4.0.1",
    "foundation-sites": "^6.4.1",
    "grunt": "^1.0.3",
    "grunt-compile-handlebars": "^2.0.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-handlebars": "^1.0.0",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-embed": "^0.2.1",
    "grunt-prettify": "^0.4.0",
    "grunt-sass": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-json-transform": "^0.4.5",
    "handlebars": "^4.0.5",
    "highlight.js": "^9.1.0",
    "js-yaml": "^3.8.2",
    "json-refs": "^2.1.6",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.11",
    "marked": "^0.3.5",
    "node-sass": "^4.9.0",
    "npm-watch": "^0.4.0",
    "ramda": "^0.26.1",
    "sync-request": "^4.1.0",
    "tmp": "0.0.31",
    "trace": "^1.1.0"
  }
}
